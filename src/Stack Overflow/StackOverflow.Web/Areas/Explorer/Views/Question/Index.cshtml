@model QuestionEditModel
@{
    ViewData["Title"] = "Index";
}

<h3>User Specific Post</h3>
<div class="row">
    <div class="col-md-8 col-sm-8">
        <div class="card">
            <div class="card-body">
                <div class="x_content">
                    @if(Model.Questions != null)
                    {
                        @foreach(var item in Model.Questions)
                    {
                        <div class="row">
                           <div class="col-md-3">
                              @*<label>@(item.TotalQutnVote == 0 ? 0 : item.TotalQutnVote) - Votes</label>*@
                                    @if(item.Answers != null)
                                    {
                                        <label>@(item.Answers.Count() != 0 ? item.Answers.Count() : 0) - Answer</label>
                                    }
                                    else
                                    {
                                        <label>@(item.Answers.Count() != 0 ? item.Answers.Count() : 0)) - Answer</label>
                                    }
                                </div>
                        <div class="col-md-9">
                            <a src="#">@item.Title</a>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <a class="btn btn-primary" asp-controller="Question" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-danger" asp-controller="Question" asp-action="DeleteQuestion" asp-route-id="@item.Id">Delete</a>
                                        </div>
                            </div>  
                        </div>
                    </div>
                    }
                    <br />
                    }
                    
                    
                </div>
            </div>
    <div class="col-md-4 col-sm-4">

    </div>
    </div>
    </div>
</div>

